<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tidakdipake.Data_zakat"
    android:background="@drawable/bg_login1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <ImageView
            android:layout_marginTop="50dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/masjid"/>

        <TextView
            android:layout_marginTop="50dp"
            android:id="@+id/Loginn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login Dashboard Mesjid"
            android:textAlignment="center"
            android:textColor="#666666"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/uss"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:drawableStart="@drawable/person"
            android:drawablePadding="24dp"
            android:paddingStart="10dp"
            android:background="@drawable/bg_et_login"
            android:hint="Username" />

        <EditText
            android:id="@+id/pss"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:drawableStart="@drawable/lock"
            android:drawablePadding="24dp"
            android:hint="Password"
            android:paddingStart="10dp"
            android:background="@drawable/bg_et_login"
            android:inputType="textPassword"/>

        <Button
            android:id="@+id/but"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#B4C6BC"
            android:text="LOGIN"
            android:textColor="#FFFFFF" />

    </LinearLayout>

</LinearLayout>
