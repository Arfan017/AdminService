<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

<!--    <androidx.cardview.widget.CardView-->
<!--        android:id="@+id/crd"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:layout_margin="5dp">-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp">

<!--            <TextView-->
<!--                android:id="@+id/ida"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:padding="10dp"-->
<!--                android:textSize="20dp"-->
<!--                android:text="NO" />-->

            <TextView
                android:id="@+id/FieldNamaAset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama                       : " />

            <TextView
                android:id="@+id/aseta"
                android:layout_toRightOf="@id/FieldNamaAset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Aset" />

            <TextView
                android:layout_below="@+id/FieldNamaAset"
                android:id="@+id/FieldJumlahAset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jumlah                    : " />

            <TextView
                android:id="@+id/juma"
                android:layout_below="@+id/aseta"
                android:layout_toRightOf="@id/FieldJumlahAset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jumlah" />

            <TextView
                android:layout_below="@+id/FieldJumlahAset"
                android:id="@+id/FieldKondisiAset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kondisi                    : " />

            <TextView
                android:id="@+id/kona"
                android:layout_below="@+id/juma"
                android:layout_toRightOf="@id/FieldKondisiAset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kondisi" />

            <TextView
                android:layout_below="@+id/FieldKondisiAset"
                android:id="@+id/FieldKeteranganAset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Keterangan            : " />

            <TextView
                android:id="@+id/keta"
                android:layout_below="@+id/kona"
                android:layout_toRightOf="@id/FieldKeteranganAset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Keterangan" />

        </RelativeLayout>

<!--    </androidx.cardview.widget.CardView>-->

</androidx.cardview.widget.CardView>