<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TextView
            android:id="@+id/Fieldpenc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Khotib                   : "
            />

        <TextView
            android:id="@+id/penc"
            android:layout_toRightOf="@+id/Fieldpenc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Pemberi"
            />

        <TextView
            android:id="@+id/Fieldtemc"
            android:layout_below="@+id/Fieldpenc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tema Ceramah   : "
            />

        <TextView
            android:id="@+id/temc"
            android:layout_below="@+id/Fieldpenc"
            android:layout_toRightOf="@+id/Fieldtemc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jenis Hewan"
            />

        <TextView
            android:id="@+id/Fieldimamm"
            android:layout_below="@+id/Fieldtemc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="imam                    : "
            />

        <TextView
            android:id="@+id/imamm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Fieldtemc"
            android:layout_toRightOf="@+id/Fieldimamm"
            android:text="Nama Pemberi"
            android:singleLine="true"
            />

        <TextView
            android:id="@+id/Fieldadz"
            android:layout_below="@+id/Fieldimamm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Muadzin               : "
            />

        <TextView
            android:id="@+id/adz"
            android:layout_below="@+id/Fieldimamm"
            android:layout_toRightOf="@+id/Fieldadz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jenis Hewan"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>